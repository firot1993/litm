extends layout/layout
block content
    div(class="loginarea ")
        div(class="container row")
            div(class="col-md-6")
                h3 Register
                br
                br
                form(action='/users' method='post' class="form-horizontal " role="form")

                    div(class="form-group row")
                        label(class="col-md-3 control-label") Username:
                        div(class="col-md-7")
                            input(type="username" class="form-control")
                    br
                    div(class="form-group row")
                        label(class="col-md-3 control-label") password:
                        div(class="col-md-7")
                            input(type="password" class="form-control")
                    br
                    div(class="form-group row")
                        label(class="col-md-3 control-label") email:
                        div(class="col-md-7")
                            input(type="email" class="form-control")
                    br
                    div(class="form-group row")
                        label(class="col-md-3 control-label") Avater:
                        input(type="file" id="file" data-preview-file-type="image")
                    br
                    br
                    br
            div(class="col-md-4")
                button(type="submit" class="btn btn-default" id="register") Register it!
    include layout/foot
    script(src="/js/fileinput.min.js")
    script.
        $(function(){
            $("#file").fileinput({
            'showUpload':false,
            'previewFileType':'image',
            'showCaption':false
            })
            $('.file-input.file-input-new').attr('class','file-input file-input-new col-md-7')

            $('#register').on('click',function(){
                file=$('.file-preview-image')
                $.ajax({url:"/users",
                        type:'post',
                        data:{
                                  username:$('input[type=username]').val(),
                                  password:$('input[type=password]').val(),
                                  email:$('input[type=username]').val(),
                                  filename:file.attr('alt'),
                                  file:file.attr('src')
                            },
                        success:function(data,status,xhr){
                            console.log('succeed!')
                            console.log(data)
                        }
                    })
                })
        })


