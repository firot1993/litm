extends ../layout
block content
	div(class="frame1")
		include ../session/user
		div(style="clear:both")
		.contain
			ul(class='bar')
				li 
					span 
						a(href="/users/"+user.username ) My Quest
				li 
					span 
						a(href="/users/"+user.username+"/1" ) My Record
				li 
					span 
						a(href="/users/"+user.username+"/2" class="choosen") Setting
				li 
					span 
						a(href="/users/"+user.username+"/3") My Profile

	
	div(style="clear:both")
	div(class="frame1")
		.main
			form(method="POST",action="/edit/"+user.username id="upload" enctype="multipart/form-data")
				//- p 
				//- 	label(for="username") User name: &nbsp &nbsp
				//- 	input#username(name="username")
				//- p
				//- 	label(for="password") Password: &nbsp &nbsp &nbsp
				//- 	input#password(type="password",name="password")
				p
					label(for="password") 选择图片: &nbsp&nbsp &nbsp &nbsp
					//- form(action="/users" method="post" id="upload" enctype="multipart/form-data")
					input(type="file" name="pic")
				br
				p
					input(type="submit",value="Create" style="background: \
						none repeat scroll 0% 0% rgba(162, 162, 189, 0.71); border-radius: 35px;")

		.information
			ul(class="informationbar")
				li
					p 我的头像
					img(src="/pic/"+user.pic)
				li
					span 用户名:
						a=user.username
				li
					span 积分:
						a 999
				li
					span 头衔:
						a 土豪
				li
					span 发布数:
						a=user.MyQuest.length
				li
					span 回答数:
						a 20
				li
					span 成功率:
						a 50%
						
				

							