div(class="modal fade " style="display:none" id="login")
    div(class="modal-dialog modal-lg" )
        div(class="modal-content" style="background:rgba(0,0,0,0.8);box-shadow: 0px 5px 15px rgba(227, 51, 51, 0.61);")
            div(class="modal-header my" style="border:none")
                button(type='button' class='close' data-dismiss='modal')
                    span(aria-hidden="true") &times;
                    span(class="sr-only") Close
                h1(class="modal-title" style="font-style:italic") Login  !!!!
            div(class="modal-body my row" style="border:none")
                div(class="col-md-8")
                    br
                    div(id="wronglogin" visable="false" class="alert alert-danger")
                        p wrong password or username
