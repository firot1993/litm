div(class="modal fade " style="display:none" id="register")
    div(class="modal-dialog modal-lg" )
        div(class="modal-content" style="background:rgba(0,0,0,0.8);box-shadow: 0px 5px 15px rgba(227, 51, 51, 0.61);")
            div(class="modal-header my" style="border:none")
                button(type='button' class='close' data-dismiss='modal')
                    span(aria-hidden="true") &times;
                    span(class="sr-only") Close
                h1(class="modal-title" style="font-style:italic") REGISTER !!!
            div(class="modal-body my row" style="border:none")
                div(class="container row")
                    div(class="col-md-8")
                        div(id="wrongregister" visable="false" class="alert alert-danger")
                            p 
                        form(class="form-horizontal " role="form" id="registerForm")
                            div(class="form-group row")
                                h5(class="col-md-2 control-label" style="color:white") Username:
                                div(class="col-md-6 control-group input-append")
                                    input(type="text" class="form-control" data-required="true" id="registerusername"
                                        data-validate="username" data-description="text" data-describedby="textdes")
                                span(class="col-md-4" id="textdes")
                            br
                            div(class="form-group row")
                                h5(class="col-md-2 control-label" style="color:white") password:
                                div(class="col-md-6 control-group input-append")
                                    input(type="password" class="form-control" data-required="true" id="registerpassword"
                                    data-validate="password" data-description="password" data-describedby="passworddes")
                                span(class="col-md-4" id="passworddes")
                            br
                            div(class="form-group row")
                                h5(class="col-md-2 control-label" style="color:white") email:
                                div(class="col-md-6 control-group input-append")
                                    input(type="email" class="form-control" data-required="true" id="registeremail"
                                    data-validate="email" data-description="email" data-describedby="emaildes" )
                                span(class="col-md-4" id="emaildes")
                            br
                            br
                            div(class="form-group row")
                                h5(class="col-md-2 control-label" style="color:white") Avater:
                                input(type="file" id="file" data-preview-file-type="image")
                                br
                            br
                            br
                            div(class="btn-group")
                                button(type="submit" class="btn btn-default" id="register") Register it!
                                button(type="reset" class="btn btn-default" ) Reset
                    div(class="col-md-4")
                  